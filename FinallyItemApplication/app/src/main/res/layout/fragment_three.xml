<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_three">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/head"
        android:padding="35dp"></ImageView>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/iv1"
        android:text="未命名"
        android:textSize="25dp"
        android:gravity="bottom"></TextView>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/iv1"
        android:layout_below="@+id/tv1"
        android:text=""
        android:textSize="20dp"
        android:gravity="top"></TextView>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/tv2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=" 0\n积分"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tv_yhj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=" 0\n优惠卷"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tv_sc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=" 0\n收藏店铺"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="我的订单"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/ll"/>

    <TextView
        android:id="@+id/tv_all"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="全部订单 ＞"
        android:textSize="17dp"
        android:layout_marginLeft="300dp"
        android:layout_below="@+id/ll"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tv3"/>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_distance"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_1"
            android:src="@drawable/pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_2"
            android:src="@drawable/use"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/img_3"
            android:src="@drawable/remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_4"
            android:src="@drawable/asale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/ll1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="待支付"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="待支付"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="待支付"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="待支付"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击获取当前配送位置"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="450dp"/>

</RelativeLayout>