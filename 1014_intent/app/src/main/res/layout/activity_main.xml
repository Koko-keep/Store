<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/et1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:hint="请输入一个数字"></EditText>

    <EditText
        android:id="@+id/et2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:hint="请输入一个数字"
        android:layout_toRightOf="@id/et1"></EditText>

    <Button
        android:id="@+id/btjia"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="＋"
        android:layout_alignLeft="@id/et1"></Button>
    <Button
        android:id="@+id/btjian"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="➖"
        android:layout_alignRight="@id/et1"></Button>
    <Button
        android:id="@+id/btcheng"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="×"
        android:layout_alignLeft="@id/et2"></Button>
    <Button
        android:id="@+id/btchu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="÷"
        android:layout_alignRight="@id/et2"></Button>
</RelativeLayout>